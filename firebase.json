{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [{"source": "**", "destination": "/index.html"}],
    "headers": [{
      "source": "**/*.@(js|css|html|png|jpg|jpeg|gif|svg|ico)",
      "headers": [{
        "key": "Cache-Control",
        "value": "max-age=31536000"
      }]
    }]
  },
  "firestore": {
  "rules": "firestore.rules"
}
